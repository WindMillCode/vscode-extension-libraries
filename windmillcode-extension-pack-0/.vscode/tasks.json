// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [

		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			}
		},
    {
      "label":"git: pushing work to git remote",
      "type":"shell",
      "windows":{
        "command":".\\task_files\\win32\\git_pushing_work_to_git_remote.ps1"
      }
    },
		{
      "label":"misc: rm all vsix",
      "type":"shell",
      "windows":{
        "command":"rm **.vsix"
      }
    },
		{
      "label":"misc: package project",
      "type":"shell",
      "windows":{
        "command":"npx vsce package ${input:misc_package_project_0}"
      }
    },
		{
      "label":"misc: make new go command",
      "type":"shell",
      "windows":{
        "command":"cd .\\task_files\\go_scripts;cp -r template ${input:misc_make_new_command_0}"
      }
    },
	],
  "inputs":[
    {
      "id": "misc_package_project_0",
      "description": "the version for the package",
      "type": "promptString"
    },
    {
      "id": "misc_make_new_command_0",
      "description": "name of the command",
      "type": "promptString"
    }
  ]
}

