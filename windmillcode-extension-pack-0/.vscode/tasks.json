{
	"version": "2.0.0",
	"tasks": [

		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			}
		},
    {
      "label":"git: pushing work to git remote",
      "type":"shell",
      "windows":{
        "command":".\\task_files\\win32\\git_pushing_work_to_git_remote.ps1"
      }
    },
		{
      "label":"misc: rm all vsix",
      "type":"shell",
      "windows":{
        "command":"rm **.vsix"
      }
    },
	]
}

