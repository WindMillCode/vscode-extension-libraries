{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Component styles":{
		"prefix": "host",
		"body": ":host {\n\t&.$1View {\n\t}\n\t.$1{\n\t\t&Main {\n\t\t&Pod{\n\t\t}\n\t}\n\t.Pod{\n\t\t&0{}\n\t\t}\n\t}\n}"
	},
	"scss for":{
		"prefix": "for",
		"body":[
			"@for $/i from $1 through $2 {\n\t&#{$/i} {\n\n\t}\n}"
		]
	},
	"import global styles":{
		"prefix": "global",
		"body":"@import \"src/assets/styles/global.scss\";"
	},
	"numbering conventions":{
		"prefix":"&",
		"body":"&$1 {\n\t&0 {\n\n\t}\n}"
	},
	"scss rem vals":{
		"prefix":"px",
		"body": "calc($1/10.6 * 1rem)"
	},
	"scss css color vars":{
		"prefix": "--wml-orig",
		"body": "--wml-$1:#{\\$wml-$1};\n--wml-original-$1:#{\\$wml-$1};"

	}
}
